-- creating a table in my christian_literature database called books
CREATE table books(
    ID int(5),
  title varchar(50),
  category varchar(20),
  year_of_release int(4),
  author varchar (50)
);

-- adding an average rating column
ALTER TABLE books
    ADD avg_rating float(5);
    
-- checking the fields in my books table
SELECT *
FROM books;

